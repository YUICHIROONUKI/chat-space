.left-contents
  .left-contents__user
    .left-contents__user__box
      .left-contents__user__box__name
        = current_user.name
      %ul.left-contents__user__box__lists
        %li.left-contents__user__box__lists__list
          = link_to  new_group_path do
            = fa_icon 'cog', class: 'left-contents__user__box__lists__list__icon'
        %li.left-contents__user__box__lists__list
          = link_to  edit_user_path(current_user) do
            = fa_icon 'edit', class: 'left-contents__user__box__lists__list__icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
